{
  "manifest_version": 3,
  "name": "Zendesk Cleaner",
  "version": "2.0",
  "description": "Removes unnecessary elements from Zendesk ticket pages.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://peerless-avsupport.zendesk.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://peerless-avsupport.zendesk.com/agent/tickets/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
